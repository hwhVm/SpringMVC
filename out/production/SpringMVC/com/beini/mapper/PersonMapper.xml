<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.beini.mapper.PersonMapper">

    <resultMap type="Person" id="personreSultMap">
        <id column="p_id" property="id"/>
        <result column="name" property="name"/>
        <collection property="orderList" ofType="com.beini.bean.Orders" column="persionId">
            <id column="id" property="id"/>
            <result column="price" property="price"/>
        </collection>
    </resultMap>
    <!--一查多-->
    <select id="selectPersonFetchOrder" parameterType="int" resultMap="personreSultMap">
        select p.*,o.* from person p,orders o where o.persionId=p.p_id and p.p_id=#{id}
    </select>

    <!--查询用户，但是不涉及到订单-->
    <select id="findAll" resultType="Person">
        select user_id id,user_name userName,user_age age from t_user
    </select>


</mapper>